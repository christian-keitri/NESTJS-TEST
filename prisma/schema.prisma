datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  email     String    @unique
  firstname String? 
  lastname  String?
  hash      String

  bookmarks Bookmark[] // One-to-many relationship with Bookmark
}

model Bookmark {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  title       String    // Corrected field name
  description String?
  link        String
  userId      Int       // Foreign key to User
  user        User      @relation(fields: [userId], references: [id]) // Relationship with User
}

