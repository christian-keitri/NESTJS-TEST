datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  email String @unique
  hash String

  firstname String? //optional string pag may ?
  lastname String?
  
  bookmarks Bookmark[]

  @@map("users")
}

  title String
  description String?
  link  String

  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("bookmarks")
}
